!!! 5

html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    title=config.site.title
    meta(name="description", content=config.site.description)
    meta(name="author", content=config.author.email)
    meta(name="viewport", content='width=device-width, initial-scale=1')

    include ../shared/_og

    link(rel='alternate', type='application/rss+xml', href=config.feed.proxy)
    link(rel='search', type='application/opensearchdescription+xml', title=config.site.title, href=config.opensearch.href)
    link(rel='shortcut icon', href='/favicon.ico')
    !=assetify.css.emit(profile)

  body
    header.layout-header
      h1.layout-heading
        a#home(href='/')=config.site.title

      aside#menu
        nav
          block menu

    section#content(data-flash=flash.json)
      include ../shared/_spinner

    include ../shared/404
    include ../shared/validation-errors

    include ../blog/entries
    include ../blog/partials/empty
    include ../blog/partials/exhausted
    include ../blog/partials/siblings
    include ../blog/partials/pager
    include ../blog/partials/more

    block templates

    !=assetify.js.emit(profile)
