section#discussion-list-template.template
  section.blog-entry.blog-discussions
    // {{#discussions}}
    article.blog-discussion(data-id='{{_id}}')
      // {{#comments}}
      section.blog-comment
        header.blog-comment-author
          span.user-name='{{author.displayName}}'
          img.user-gravatar(src='{{author.gravatar}}')

        section.blog-comment-body='{{{html}}}'
      // {{/comments}}
    // {{/discussions}}

    // {{^discussions}}
    article.blog-entry-uncommented
      p
        span='No comments have been posted '
        i='yet'
        span='.'
    // {{/discussions}}