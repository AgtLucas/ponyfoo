aside.blog-sidebar.flip-wrapper
  article.flip-card
    section#latest-posts.face.front
      header
        a.sidebar-flipper.about-author(title='About me')
        h5.underline='Latest Posts'

      section
        nav
          // {{#latest}}
          a.highlighted-link(href='{{permalink}}', title='posted {{published}}')='{{title}}'
          // {{/latest}}

    section#about-author.face.back
      header
        a.sidebar-flipper.latest-posts(title='Latest posts')
        h5.underline='About'

      section.author-description
        p=config.author.about
        p=config.author.social

      footer.social-links
        a.social.github(title='Follow me on GitHub', target='_blank', href=config.author.github)='GitHub'
        a.social.stackoverflow(title='Follow me on Stack Overflow', target='_blank', href=config.author.stackoverflow)='Stack Overflow'
        a.social.linkedin(title='Follow me on LinkedIn', target='_blank', href=config.author.linkedin)='LinkedIn'
        a.social.email(title='Contact me via email', target='_blank', href='mailto:' + config.author.email)='Email'
        a.social.rss(title='Subscribe to my RSS feed', target='_blank', href=config.feed.proxy)='RSS Feed'