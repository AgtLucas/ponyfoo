aside.blog-sidebar.flip-wrapper
  article.flip-card
    section#latest-posts.face.front
      header
        a.sidebar-flipper.about-blog(title='About this blog')
        h5.underline='Latest Posts'

      section
        nav
          // {{#latest}}
          a.highlighted-link(href='{{permalink}}', data-hint='posted {{published}}')='{{title}}'
          // {{/latest}}

    section#about-blog.face.back
      header
        a.sidebar-flipper.latest-posts(title='Latest posts')
        h5.underline='About'

      section.blogger-description
        p=config.blogger.about
        p=config.blogger.social

      footer.social-links
        a.social.github(title='Follow me on GitHub', target='_blank', href=config.blogger.github)='GitHub'
        a.social.stackoverflow(title='Follow me on Stack Overflow', target='_blank', href=config.blogger.stackoverflow)='Stack Overflow'
        a.social.linkedin(title='Follow me on LinkedIn', target='_blank', href=config.blogger.linkedin)='LinkedIn'
        a.social.email(title='Contact me via email', target='_blank', href='mailto:' + config.blogger.email)='Email'
        a.social.rss(title='Subscribe to my RSS feed', target='_blank', href=config.feed.proxy)='RSS Feed'