section.fluid-center
  header
    h1
      span='NBrut'
      span.tagline='\'the open-source blogging engine for developers\';'

    h2='What\'s waiting for me?'

  section.left
    a(href=config.pkg.homepage, target='_blank', title='Visit NBrut on GitHub')
      img.icon-256(src='/img/icon-256.png?v=1', alt='')

  section.right
    ul.item-list
      li='A blogging platform targeted at software developers'
      li
        span='100% open-source, publicly available on '
        a.highlighted-link.hint(href=config.pkg.homepage, target='_blank', data-hint='Visit NBrut on GitHub')='GitHub'

      li='Simply, elegantly designed'
      li='Bleeding edge. Developed entirely in NodeJS'
      li='Convention over configuration'

  section.availability-checker
    section.availability-input
      input.identifier(placeholder='Type your vanity title', maxlength='32')
      span.availability
        span.loading-block
        span.loading-block
        span.loading-block

    span.legend
      span='e.g: '
      strong='pfoo'
      span.absolute=' - ' + config.server.hostSlug('pfoo')

  section.availability-checker-buttons
    button.proceed(title='Just one more step', disabled)
      span.proceed-text='Register'
      i.proceed-tip