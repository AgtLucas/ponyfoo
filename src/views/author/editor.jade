section#entry-editor-template.template(data-class='entry-editor')
  h1='Entry Editor'

  section#entry-editor
    fieldset
      p
        label(for='entry-title')='Title'
        input#entry-title(type='text', value='{{entry.title}}')

    div#wmd-button-bar-brief.wmd-button-bar
    div
      textarea#wmd-input-brief.wmd-input(name='entry.brief')='{{entry.brief}}'

    div#wmd-button-bar-text.wmd-button-bar
    div
      textarea#wmd-input-text.wmd-input(name='entry.text')='{{entry.text}}'

  article#entry-preview.blog-entry
    header.blog-entry-title
      h1

    section#wmd-preview-brief.blog-entry-brief
    section#wmd-preview-text.blog-entry-text

  div#entry-editor-buttons
    a#cancel-entry='Cancel'
    button#submit-entry(data-id='{{entry._id}}')
      span(data-text='{{submit.text}}', data-text-disabled='{{submit.disabled}}')