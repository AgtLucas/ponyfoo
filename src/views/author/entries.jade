section#entry-review-template.template(data-class='entry-review')
  -#|{{^entries}}
  h1='No Posts'
  div='There are no blog posts to review.'
  -#|{{/entries}}

  table
    thead
      tr
        th='Date'
        th='Title'
        th
    tbody
      -#| {{#entries}}
      tr
        td='{{date}}'
        td='{{title}}'
        td
          a.remove-entry
      -#| {{/entries}}