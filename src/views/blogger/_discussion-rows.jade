// {{#discussions}}
tr.discussion-row
  td.date(data-hint='last updated {{last.timeAgo}}')='{{last.dateText}}'
  td.user-icon
    a(href='/user/profile/{{last.author.id}}', data-hint='See profile')
      img.user-gravatar.tiny(data-src='{{last.author.gravatar}}')

  td.user-displayName
    a.highlighted-link(href='/user/profile/{{last.author.id}}', data-hint='See profile')='{{last.author.displayName}}'

  td.comment='{{{last.html}}}'
// {{/discussions}}