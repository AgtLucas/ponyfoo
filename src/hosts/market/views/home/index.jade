extends ../../../../frontend/views/layout/minimal

block title
  title='Blogging, Revisited - Pony Foo'

block body
  header#top-navigation
    nav.fluid-center
      ul
        li.top-link
          a(href='#top')='Home'
        li.features-link
          a(href='#features')='Features'
        li.hop-in-link
          a(href='#hop')='Hop in!'

  main.content
    article#top.market-section.ponyfoo(data-nav='.top-link')
      include _ponyfoo

    article#features.market-section.features(data-nav='.features-link')
      include _features

    article#hop.market-section.hop-in(data-nav='.hop-in-link')
      include _hop

  include _footer-navigation
  include _ribbon