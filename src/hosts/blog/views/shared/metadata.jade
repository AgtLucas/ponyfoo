section#metadata-template.template
  meta(name='keywords', content='{{keywords}}')

  meta(property='og:site_name', content=blog.title)
  meta(property='og:url', content='{{url}}')

  meta(name='twitter:card', content='summary')
  meta(name='twitter:site', content='@ponyfoo')
  meta(name='twitter:creator', content='@nzgb')
  
  meta(property='og:image', itemprop='image', content='{{firstImage}}')

  // {{#images}}
  meta(property='og:image', content='{{.}}')
  // {{/images}}

  //- twitter uses the last meta image, so we need to be after og:image tags
  meta(name='twitter:image:src', content='{{firstImage}}')

  meta(name='twitter:title', itemprop='name', property='og:title', content='{{title}}')

  // {{#description}}
  meta(name='description', property='og:description', itemprop='description', content='{{description}}')
  meta(name='twitter:description', content='{{description}}')
  // {{/description}}
  // {{^description}}
  meta(name='description', property='og:description', itemprop='description', content=blog.meta)
  meta(name='twitter:description', content=blog.meta)
  // {{/description}}

  meta(name='author', itemprop='creator', content=blogger.meta)

  meta(itemprop='url', content='{{url}}')

  link(rel='canonical', href='{{url}}')