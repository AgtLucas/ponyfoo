nav.nv-container#top
  a.nv-search(href='#search') Q

  if model.user
    div.nv-logon
      a.nv-logon-anchor(href='/account/logout') Logout
  else
    div.nv-logon
      a.nv-logon-anchor(href='/account/login') Login

