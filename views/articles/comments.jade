section.mm-comments
  each comment in article.comments
    article.mm-comment
      section.mm-content.md-markdown!=comment.contentHtml

  footer
    section.mc-container
      input.mc-name(placeholder='John Doe')
      input.mc-email(placeholder='hello@johndoe.io')
      input.mc-site(placeholder='johndoe.io (optional)')
      div.mc-content
      article.mc-preview.md-markdown
      button.mc-send Comment
