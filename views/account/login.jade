h1.vw-title Sign In

section.al-providers
  a.ic-google(href='/authentication/login/google', title='Authenticate with Google') Authenticate with Google
  a.ic-github(href='/authentication/login/github', title='Authenticate with GitHub') Authenticate with GitHub
  a.ic-facebook(href='/authentication/login/facebook', title='Authenticate with Facebook') Authenticate with Facebook
  a.ic-linkedin(href='/authentication/login/linkedin', title='Authenticate with LinkedIn') Authenticate with LinkedIn

p.al-separator
 span='- or the '
