h1.vw-title Article Composer
section.ac-container
  input.uv-text-input.ac-title(placeholder='A Thoughtful, Catchy Title')
  input.uv-text-input.ac-slug(placeholder='a-thoughtful-catchy-title')
  div.ac-text.ac-introduction(placeholder='Introduction to your article. Used for marketing, search snippets, etc.')
  div.ac-text.ac-body(placeholder='Main body of your article')
  input.uv-text-input.ac-tags(placeholder='Enter a list of tags relevant to this article')
  article.ac-preview
    h1.ac-preview-title
  section.ac-preview-tags
aside.ac-timing
  p.ac-timing-draft
    input.ck-input.ac-status#ac-draft-radio(type='radio', name='ac-status', value='draft')
    label.ck-radio(for='ac-draft-radio') Draft
  p.ac-timing-immediate
    input.ck-input.ac-status#ac-publish-radio(type='radio', name='ac-status', value='publish', checked)
    label.ck-radio(for='ac-publish-radio') Publish
  p.ac-timing-schedule
    input.ck-input.ac-schedule#ac-schedule-checkbox(type='checkbox')
    label.ck-checkbox(for='ac-schedule-checkbox') Schedule
    input.ac-publication
footer.ac-actions
  a.ac-discard(aria-label='The draft will be deleted') Discard Draft
  button.ac-save(aria-label='Make the content immediately accessible!') Publish
