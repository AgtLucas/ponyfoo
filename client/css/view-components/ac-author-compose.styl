.ac-title,
.ac-slug,
.ac-introduction,
.ac-body,
.ac-tags
  width 100%

.ac-title
  font-size s-article-title

.ac-actions
  text-align right

.ac-publication
  display none

.ac-schedule:checked ~ .ac-publication
  display block
  margin-top 15px

.ac-preview-title:empty:before
  content 'Article Preview'

.ac-container,
.ac-timing
  vertical-align top
  display inline-block

.ac-container
  width calc(100% - 224px)
  margin-right 20px

.ac-timing
  width 200px

.ac-timing-draft
  margin-top 0
