.nv-logon
  display none

.nv-items
  margin 20px 0
  list-style none

.nv-item
  display inline-block
  margin-left 6px

.nv-logon-anchor
  position fixed
  top 0
  right 0
  padding 10px
  opacity 0
  color #fff

  &:hover
    text-decoration none
    opacity 1
    color #fff
    background-color c-pink

.nv-search
  float right
  background-color c-pink
  margin-top 13px
  padding 8px 12px
  color #fff
  box-shadow 1px 1px 1px c-pink - #333

  &:visited
    color #fff

  &:hover
    background-color c-yellow-js
    box-shadow 1px 1px 1px c-yellow-js - #333
    color c-pink
    text-decoration none

@media screen and (min-width: 768px)
  .nv-logon,
  .nv-items
    display block

  .nv-search
    display none
