.mm-comments
  margin 0 -10px -10px
  padding-top 25px
  background-color c-background

.mm-comment,
.mm-comment-create
  padding 25px
  background-color c-moderate

.mm-comment
  margin-bottom 25px

.mm-author
  float right
  margin-top -15px
  margin-right -15px
  padding-left 10px

.mm-author-name
  vertical-align super
  margin-right 6px

.mm-gravatar
  vertical-align bottom
  border 3px solid c-strong
  border-radius 6px
  transition box-shadow 0.5s ease-in-out

.mm-author-site:hover .mm-gravatar
  box-shadow 1px 2px 1px c-pink

@media screen and (min-width: 768px)
  .mm-comments
    margin 0 -25px -25px
