.mm-author
  float right
  margin-top -10px
  margin-right -10px
  padding 4px
  background-color c-strongish
  box-shadow -1px 1px 1px c-border
  margin-left 6px
  margin-bottom 6px

  &:hover .mm-author-name
    text-decoration underline

.mm-author-name
  vertical-align middle
  display inline-block
  text-overflow ellipsis
  white-space nowrap
  overflow hidden
  margin-right 6px
  max-width 120px

.mm-gravatar
  vertical-align middle
  border 3px solid c-strong
  border-radius 6px
  transition box-shadow 0.5s ease-in-out

.mm-author-site
  display block

  &:hover .mm-gravatar
    box-shadow 1px 2px 1px c-pink

@media screen and (min-width: 768px)
  .mm-author
    margin-top -25px
    margin-right -25px
