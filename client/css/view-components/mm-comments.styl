.mm-comments
  margin 0 -25px
  padding 25px 0
  background-color c-background

.mm-comment,
.mm-comment-create
  padding 25px
  background-color c-moderate

.mm-comment
  margin-bottom 25px

.mm-author
  float right

.mm-author-name
  vertical-align super
  margin-right 6px

.mm-gravatar
  vertical-align bottom
  border 3px solid c-strong
  border-radius 6px
  box-shadow 1px 2px 1px c-pink


