body
  word-wrap break-word
  overflow-x hidden
  overflow-y scroll
  width 93.75% // 300px on 320px
  max-width 1250px // otherwise posts get way too long
  margin 0 auto
  text-align center

main
  display inline-block
  text-align left
  padding 10px
  min-height 300px
  margin-bottom 25px
  width 100%

@media screen and (min-width: 768px)
  main
    padding 25px
