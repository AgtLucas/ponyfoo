.ck-input
  position absolute
  top -9999px
  left -9999px
  opacity 0

.ck-checkbox
  display inline-block
  cursor pointer

.ck-checkbox:before
  display inline-block
  content '\2713'
  margin-right 5px
  padding 3px 5px 4px 5px
  background-color strong
  border-radius 6px
  border 1px solid grayish
  border-top 2px solid light
  border-left 2px solid light
  color transparent
  text-shadow none

.ck-checkbox:hover:before
  background-color strong_hover
  color blue_hover

.ck-input:checked ~ .ck-checkbox:before
  color #fff
  text-shadow 1px 1px 1px moderate

.ck-checkbox:hover:before,
.ck-input:checked ~ .ck-checkbox:before
  border 1px solid grayish
  border-top 2px solid border
  border-left 2px solid border
