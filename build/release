#!/bin/bash

npm run clean
npm run copy
npm test

# compile
cp -r client/img .bin/public/img
cp client/{favicon.ico,robots.txt,humans.txt} .bin/public
stylus client/css/all.styl -o .bin/public/css --include-css --include client/css --compress
cleancss .bin/public/css/all.css -o .bin/public/css/all.css --s0
jade views/**/* --out .bin --client --commonjs --no-debug --obj '{"basedir":"views"}'
taunus -o
browserify client/js/main.js -o .bin/public/js/all.js --basedir client/js -t uglifyify

# revving
