#!/bin/bash

: ${PORT:="3000"}

npm run clean
npm run copy
npm test

# compile
stylus client/css/all.styl -o .bin/public/css --include-css --include client/css --watch &
jade views/**/*.jade -o .bin --client --commonjs --pretty --no-debug --obj '{"basedir":"views"}' --watch &
taunus -o # required
taunus -o --watch &
watchify client/js/main.js -o .bin/public/js/all.js --debug --verbose &

# start app
nodemon app.js
